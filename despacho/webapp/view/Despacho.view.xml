<mvc:View
    controllerName="ar.com.rizobacter.despacho.controller.Despacho"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    xmlns:f="sap.f"
    xmlns:fb="sap.ui.comp.filterbar"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        id="page"
        showNavButton="false"
        showHeader="false"
    >
        <uxap:ObjectPageLayout id="ObjectPageLayout">
            <!-- HEADER TITULO -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:expandedHeading>
                        <Title text="{i18n>appTitle}" />
                    </uxap:expandedHeading>
                    <uxap:snappedHeading>
                        <HBox>
                            <VBox>
                                <Title text="{i18n>title}" />
                                <Label text="{i18n>subTitle}" />
                            </VBox>
                        </HBox>
                    </uxap:snappedHeading>
                    <uxap:expandedContent>
                        <Label text="{i18n>subTitle}" />
                    </uxap:expandedContent>
                    <uxap:snappedTitleOnMobile>
                        <Title text="{i18n>title}" />
                    </uxap:snappedTitleOnMobile>
                    <uxap:actions>
                        <Button                            
                            press=".onOpenHistoricos"
                            icon="sap-icon://activity-items"
                            text="{i18n>list}"
                        />
                    </uxap:actions>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>
            <!-- HEADER CONTENIDO -->
            <uxap:headerContent>
                <FlexBox
                    class="fondo"
                    wrap="Wrap"
                    fitContainer="true"
                >
                    <VBox
                        class="sapUiSmallMargin"
                        alignItems="Center"
                    >
                        <Label
                            text="{i18n>kunnr}:"
                            labelFor="kunnr"
                            class="sapUiTinyMarginBottom"
                        />
                        <Input
                            placeholder="Search Cliente"
                            id="kunnrInput"
                            showSuggestion="true"
                            showValueHelp="true"
                            valueHelpOnly="false"
                            valueLiveUpdate="true"
                            editable="true"
                            enabled="true"
                            width="400px"
                            suggest="onSuggest"   
                            valueHelpRequest=".onValueHelpRequest"
                            suggestionItems="{entregas>/F4kunnrSet}"
                        >
                            <suggestionItems>
                                <core:ListItem
                                    key="{entregas>Kunnr}"
                                    text="{entregas>Kunnr} - {entregas>Name}" 
                                />
                            </suggestionItems>
                        </Input>
                    </VBox>
                    <VBox
                        class="sapUiSmallMargin"
                        alignItems="Center"
                    >
                        <Label
                            text="{i18n>wadat}:"
                            labelFor="wadat"
                            class="sapUiTinyMarginBottom"
                        />
                        <!-- <DatePicker
                            id="wadatInput"
                            required="true"
                            change="onChangeState"
                            value="{
								path: 'oPostData>/FechaDesv',
								type: 'sap.ui.model.odata.type.DateTime',
								constraints: {
									displayFormat: 'Date'
								},
								formatOptions: {
									UTC: false,
									pattern: 'dd/MM/yyyy'
								}
							}"
                            valueFormat="dd/MM/yyyy"
                        /> -->
                        
                        <DateRangeSelection
                            id="wadatInput"
                            type= 'sap.ui.model.type.DateTime'
                            placeholder="Ingrese una fecha"
                            valueFormat="MM/dd/YYYY"
                            valueStateText="Enter a valid date..."
                            displayFormat="YYYYMMdd"
                            required="true"
                            change="onChangeState"
                        />
                        
                    </VBox>
                </FlexBox>
                <FlexBox
                    alignContent="Stretch"
                    alignItems="Stretch"
                    backgroundDesign="Transparent"
                    direction="Row"
                    displayInline="false"
                    fitContainer="false"
                    justifyContent="End"
                    wrap="NoWrap"
                >

                    <Button
                        tooltip="{i18n>filter}"
                        icon="sap-icon://search"
                        text="Filtrar"
                        press="onFilterEntregas"

                    />
                   
                    <Button width="5px" type="Transparent"/>
                    
                    <Button
                        tooltip="{i18n>filter}"
                        icon="sap-icon://clear-filter"
                        text="Limpiar Filtro"
                        press="onCleanFilterEntregas"
                    />
                    
                </FlexBox>
            </uxap:headerContent>

            <!-- SECCIONES -->
            <uxap:sections>
                <!-- CABECERA DE ENTREGAS-->

                <uxap:ObjectPageSection title="{i18n>entregas}">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection>
                            <uxap:blocks>
                                <core:Fragment
                                    fragmentName="ar.com.rizobacter.despacho.view.fragment.EntregasCabecera"
                                    type="XML"
                                />
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
    </Page>
</mvc:View>
