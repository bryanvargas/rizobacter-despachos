<mvc:View
	controllerName="ar.com.rizobacter.despacho.controller.Historicos"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:uxap="sap.uxap"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Page
        id="page"
        showNavButton="true"
        showHeader="true"
    >
        <uxap:ObjectPageLayout id="ObjectPageLayout">
            <!-- HEADER TITULO -->
            <uxap:headerTitle>
                <uxap:ObjectPageDynamicHeaderTitle>
                    <uxap:expandedHeading>
                        <Title text="{i18n>historico.appTitle}" />
                    </uxap:expandedHeading>
                    <uxap:snappedHeading>
                        <HBox>
                            <!-- <Avatar
                                src="sap-icon://product"
                                class="sapUiMediumMarginEnd sapUiSmallMargin"
                                displayShape="Square"
                            /> -->
                            <VBox>
                                <Title text="{i18n>historico.subTitle}" />
                                <Label text="{i18n>historico.subTitle}" />
                            </VBox>
                        </HBox>
                    </uxap:snappedHeading>
                    <uxap:expandedContent>
                        <Label text="{i18n>historico.subTitle}" />
                    </uxap:expandedContent>
                    <uxap:snappedTitleOnMobile>
                        <Title text="{i18n>title}" />
                    </uxap:snappedTitleOnMobile>
                    <uxap:actions>
                        <Button
                            press=".onPrintRemito"
                            icon="sap-icon://print"
                            text="{i18n>print}"
                            type="Emphasized"
                            visible="true"
                        />
                        <!-- <Button
                            type="Accept"
                            press="abrirDialogFinalizacion"
                            icon="sap-icon://save"
                            text="{i18n>update}"
                        /> -->
                    </uxap:actions>
                </uxap:ObjectPageDynamicHeaderTitle>
            </uxap:headerTitle>

            <!-- HEADER CONTENIDO -->
            <uxap:headerContent>
                <FlexBox
                    class="fondo"
                    wrap="Wrap"
                    fitContainer="true"
                >
                    <!-- <Avatar
                        src="sap-icon://product"
                        displayShape="Square"
                        displaySize="L"
                    /> -->
                    <VBox
                        class="sapUiSmallMargin"
                        alignItems="Center"
                    >
                        <Label
                            text="{i18n>kunnr}:"
                            labelFor="kunnr"
                            class="sapUiTinyMarginBottom"
                        />
                        <Input
                            id="kunnrInput"
                            showSuggestion="true"
                            showValueHelp="true"
                            valueHelpOnly="false"
                            editable="true"
                            enabled="true"
                            valueHelpRequest=".onValueHelpRequest"
                            suggestionItems="{entregas>/F4kunnrSet}"
                        >
                            <suggestionItems>
                                <core:ListItem
                                    key="{entregas>Kunnr}"
                                    text="{entregas>Name}"
                                />
                            </suggestionItems>
                        </Input>
                    </VBox>
                    <VBox
                        class="sapUiSmallMargin"
                        alignItems="Center"
                    >
                        <Label
                            text="{i18n>matnr}:"
                            labelFor="wadat"
                            class="sapUiTinyMarginBottom"
                        />
                        <Input
                            id="matnrInput"
                            showSuggestion="true"
                            showValueHelp="true"
                            valueHelpOnly="false"
                            editable="true"
                            enabled="true"
                            valueHelpRequest=".onValueHelpRequest"
                            suggestionItems="{materiales>/ZCDS_GETMATERIAL}"
                        >
                            <suggestionItems>
                                <core:ListItem
                                    key="{materiales>Descripcion}"
                                    text="{materiales>Material}"
                                />
                            </suggestionItems>
                        </Input>
                    </VBox>
                </FlexBox>
                <FlexBox
                    alignContent="Stretch"
                    alignItems="Stretch"
                    backgroundDesign="Transparent"
                    direction="Row"
                    displayInline="false"
                    fitContainer="false"
                    justifyContent="End"
                    wrap="NoWrap"
                >

                    <Button
                        tooltip="{i18n>filter}"
                        icon="sap-icon://search"
                        text="Filtrar"
                        press="onFilterHistorico"

                    />
                   
                    <Button width="5px" type="Transparent"/>
                    
                    <Button
                        tooltip="{i18n>filter}"
                        icon="sap-icon://clear-filter"
                        text="Limpiar Filtro"
                        press="onClearFilterHistorico"
                    />
                    
                </FlexBox>
            </uxap:headerContent>

            <!-- SECCIONES -->
            <uxap:sections>
                <!-- CABECERA DE ENTREGAS-->

                <uxap:ObjectPageSection title="{i18n>entregas}">
                    <uxap:subSections>
                        <uxap:ObjectPageSubSection
                            title=""
                            titleUppercase="false"
                        >
                            <uxap:blocks>
                                <core:Fragment
                                    fragmentName="ar.com.rizobacter.despacho.view.fragment.HistoricosTabla"
                                    type="XML"
                                />
                            </uxap:blocks>
                        </uxap:ObjectPageSubSection>
                    </uxap:subSections>
                </uxap:ObjectPageSection>
            </uxap:sections>
        </uxap:ObjectPageLayout>
    </Page>
</mvc:View>