<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
>
	<Panel>
		<VBox>
			<!-- <MessageStrip
				text="{worklistView>/worklistTableTitle}"
				type="Information"
				showIcon="true"
				class="sapUiTinyMargin"
			/> -->
			<Table
				id="tablaPasiciones"
				mode="SingleSelect"
				items="{
					path: '/results',
					sorter: {
						path: 'Posnr'
					}
				}"
				inset="true"
				noDataText=""
				growing="true"
				growingThreshold="10"
				growingScrollToLoad="false"
				growingTriggerText="{i18n>mas}"
				fixedLayout="true"
				alternateRowColors="true"
			>
				<headerToolbar>
					<OverflowToolbar>
						<content>
							<!-- <ToolbarSpacer /> -->
							<ToolbarSpacer width=""/>
							<ToolbarSpacer width=""/>
							<!-- <ToolbarSpacer width=""/>
                        <ToolbarSpacer width=""/> -->
							<Button
								text="{i18n>btnPart}"
								icon="sap-icon://add"
								press=".onAddLine"
							/>
						</content>
					</OverflowToolbar>
				</headerToolbar>
				<columns>
					<Column width="3rem"/>
					<Column width="6rem">
						<header>
							<Label text="{i18n>entrega.pos.vbeln}"/>
						</header>
					</Column>
					<Column width="6rem">
						<header>
							<Label text="{i18n>entrega.pos.posnr}"/>
						</header>
					</Column>
					<Column width="6rem">
						<header>
							<Label text="{i18n>entrega.pos.matnr}"/>
						</header>
					</Column>
					<Column width="20rem">
						<header>
							<Label text="{i18n>entrega.pos.matnrDesc}"/>
						</header>
					</Column>
					<Column width="3.8rem">
						<header>
							<Label text="{i18n>entrega.pos.werks}"/>
						</header>
					</Column>
					<Column width="6rem">
						<header>
							<Label text="{i18n>entrega.pos.lgort}"/>
						</header>
					</Column>
					<Column width="6.8rem">
						<header>
							<Label text="{i18n>entrega.pos.lfimg}"/>
						</header>
					</Column>
					<Column width="8rem">
						<header>
							<Label
								text="{i18n>entrega.pos.pikmg}"
								required="true"
							/>
						</header>
					</Column>
					<Column width="10rem">
						<header>
							<Label
								text="{i18n>entrega.pos.charg}"
								required="true"
							/>
						</header>
					</Column>
					<Column>
						<header>
							<Label text="{i18n>entrega.pos.vrkme}"/>
						</header>
					</Column>
				</columns>
				<items>
					<ColumnListItem
						type="Active"
						press="onPicking"
						highlight="Information"
					>
						<cells>
							<Text text=""/>
							<Label
								text="{Vbeln}"
								design="Bold"
							/>
							<Text text="{
								path: 'Posnr',
								formatter: '.formatter.quitarCero'
							}"/>
							<Text text="{Matnr}"/>
							<Text text="{MatnrDesc}"/>
							<Text text="{Werks}"/>
							<Text text="{Lgort}"/>
							<Text text="{
								path: 'Lfimg',
								formatter: '.formatter.quitarCero'
							}"/>
							<Input
								type="Text"
								editable="true"
								id="PikmgId"
								valueState="{field>PikmgStatus}"
							/>
							<Input
								id="chargInput"
								showSuggestion="true"
								showValueHelp="true"
								valueHelpOnly="false"
								editable="true"
								enabled="true"
								valueHelpRequest=".onValueHelpRequest"
								valueState="{field>ChargStatus}"
								value="{Charg}"
							/>

							
							<!-- <Text text="{Charg}" /> -->
							<Text text="{Vrkme}"/>
							<!-- <core:Icon src="{modeloVuelos>Icono}" size="1.5rem" color="{modeloVuelos>Color}"/>
										<core:Icon src="sap-icon://alert" size="1.5rem" color="#FABD64" visible="{modeloVuelos>Modificaciones}"/> -->
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</VBox>
	</Panel>
</core:FragmentDefinition>